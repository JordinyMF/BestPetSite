<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmf.system.bestpetsite.MainActivity">

    <ProgressBar
        android:id="@+id/progressa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIENVENIDO"
                    android:textSize="40dp"
                    android:typeface="sans"
                    android:id="@+id/dd"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de Tareas"
                    android:textSize="30dp"
                    android:typeface="sans"
                    android:layout_below="@+id/dd"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"

                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="#fff"
                        android:orientation="vertical"
                        android:paddingTop="70dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:elevation="7dp"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            >
                            <EditText
                                android:id="@+id/edt_loginname"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ingrese usuario"

                                android:textAllCaps="false"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="20dp"

                            >
                            <EditText
                                android:id="@+id/edt_loginpassword"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:singleLine="true"

                                android:drawableTint="#FF4081"
                                android:hint="Password"
                                android:inputType="textPassword"
                                />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btn_acceder"
                            android:layout_marginTop="40dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Acceder"

                            android:layout_gravity="center"
                            android:onClick="onClickBreak"
                            />

                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:layout_marginTop="120dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"

                    android:scaleType="fitXY"

                    android:layout_centerHorizontal="true"
                    android:elevation="7dp"
                    />
            </RelativeLayout> </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
