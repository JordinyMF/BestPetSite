<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="16dp"
    android:background="@drawable/fondo"
    tools:context="com.jmf.system.bestpetsite.presentation.view.activities.LoginActivity">
    <ProgressBar
        android:id="@+id/progressa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIENVENIDO"
                    android:textSize="40dp"
                    android:typeface="sans"
                    android:id="@+id/dd"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"

                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Pet Site"
                    android:textSize="26dp"
                    android:typeface="sans"
                    android:layout_below="@+id/dd"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic"
                    android:textColor="@color/colorWhite"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"

                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:background="#fff"
                        android:orientation="vertical"
                        android:paddingTop="60dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:elevation="7dp"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextInputLayout"

                            >
                            <EditText
                                android:id="@+id/edt_loginname"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ingrese usuario"
                                android:drawableLeft="@drawable/user"
                                android:drawableStart="@drawable/user"
                                android:textAllCaps="false"
                                android:lines="1"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextInputLayout"
                            android:layout_marginTop="10dp"

                            >
                            <EditText
                                android:id="@+id/edt_loginpassword"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:drawableLeft="@drawable/password"
                                android:drawableStart="@drawable/password"
                                android:drawableTint="#FF4081"
                                android:hint="Password"
                                android:inputType="textPassword"
                                />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btn_ToAccess"
                            android:layout_marginTop="20dp"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:text="Acceder"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorCircle"
                            android:layout_gravity="center"
                            android:onClick="ToAccess"
                            />

                        <Button
                            android:id="@+id/btn_AccountCreate"
                            android:layout_marginTop="10dp"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:text="Crear Cuenta"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorCircle"
                            android:layout_gravity="center"
                            android:onClick="AccountCreate"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:layout_marginTop="110dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/man"
                    android:scaleType="fitXY"
                    android:background="@drawable/circleimglogin"
                    android:layout_centerHorizontal="true"
                    android:elevation="7dp"
                    />
            </RelativeLayout> </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
